@model List<DirectToEmployer.Models.JobPosting>
@{
    ViewBag.Title = "OpenJobPostings";
    Layout = "~/Views/Shared/_LayoutJobseeker.cshtml";
}


<h2>Open Job Postings</h2>

<table class="table table-hover">
    <tr>
        <th class="checklistTasks">
            Job Title
        </th>
        <th class="checklistTasks">
            Company Name
        </th>
        <th class="checklistTasks">
            Desired Skills
        </th>
        <th class="checklistTasks">
            Suspense
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employer.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DesiredSkills)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Suspense)
                </td>
                <td>
                    @*@Html.ActionLink("Details", "PublicJobPosting", "JobPosting", new { id = item.JobPostingId }, null)*@
                    <a href="@Url.Action("PublicJobPosting", "JobPosting", new { id = item.JobPostingId }, null)" class="btn btn-warning">
                        <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        </tbody>
    }
</table>

@model List<DirectToEmployer.Models.JobPosting>
@{
    ViewBag.Title = "OpenJobPostings";
}


<h2>Open Job Postings:</h2>

<table>
    <tr>
        <th>
            Job Title
        </th>
        <th>
            Company Name
        </th>
        <th>
            Desired Skills
        </th>
        <th>
            Suspense
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employer.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesiredSkills)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suspense)
            </td>
            <td>
                @Html.ActionLink("Details", "PublicJobPosting", "JobPosting", new { id = item.JobPostingId }, null)
            </td>
        </tr>
    }
</table>

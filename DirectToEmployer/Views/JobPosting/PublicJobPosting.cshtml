@model DirectToEmployer.Models.JobPosting
@{ 
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
}
@Html.HiddenFor(model => model.JobPostingId)
<div>
    <h2>@Model.JobTitle</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Suspense)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Suspense)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DesiredSkills)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DesiredSkills)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobPostingSummary)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobPostingSummary)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ApplicationChallenge)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApplicationChallenge)
        </dd>

        <dt>
            Apply
        </dt>
        <dd>
            <a href="@Url.Action("NewSubmission", "Application", new { id = Model.JobPostingId }, null)" class="btn btn-warning">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
            @*@Html.ActionLink("Apply", "NewSubmission", "Application", new { id = Model.JobPostingId }, null)*@
        </dd>

    </dl>
</div>
<p>
    @*@Html.ActionLink("Back to open job postings", "OpenJobPostings", "JobPosting")*@
    <a href="@Url.Action("OpenJobPostings", "Jobposting")" class="btn btn-warning">
        <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span>
    </a>
</p>

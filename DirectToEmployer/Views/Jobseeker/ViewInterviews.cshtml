@model List<DirectToEmployer.Models.Interview>
@{
    ViewBag.Title = "ViewInterviews";
    Layout = "~/Views/Shared/_LayoutJobseeker.cshtml";
}

<h2>Your Past/Upcoming Interviews</h2>

<table class="table">
    <tr>
        <th class="checklistTasks">
            Date & Time
        </th>
        <th class="checklistTasks">
            Company
        </th>
        <th class="checklistTasks">
            Distance To Interview
        </th>
        <th class="checklistTasks">
            Duration To Interview
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateAndTimeOfInterview)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistanceToInterview)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DurationToInterview)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", "Interview", new { id = item.InterviewId }, null)*@
                <a href="@Url.Action("Edit", "Interview", new { id = item.InterviewId }, null)" class="btn btn-warning">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                </a>

                @*@Html.ActionLink("View Checklist", "InterviewChecklist", "Interview", new { id = item.InterviewId }, null)*@
                <a href="@Url.Action("InterviewChecklist", "Interview", new { id = item.InterviewId }, null)" class="btn btn-warning">
                    <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                </a>

                @*@Html.ActionLink("Delete", "Delete")*@
                <a href="@Url.Action("Delete", "Interview", new { id = item.InterviewId }, null)" class="btn btn-warning">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }
</table>

<p>
    <a href="@Url.Action("Create", "Interview")" class="btn btn-warning">
        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
    </a>
</p>


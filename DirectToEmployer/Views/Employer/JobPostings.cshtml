@model List<DirectToEmployer.Models.JobPosting>

@{ 
    ViewBag.Title = "JobPostings";
}

<h2>Your Active Job Postings:</h2>

<p>
    @Html.ActionLink("Create a new job posting", "Create", "JobPosting")
</p>

<table>
    <tr>
        <th>
            Job Title
        </th>
        <th>
            Suspense
        </th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suspense)
            </td>
            <td>
                <a href="@Url.Action("Edit", "JobPosting", new { id = item.JobPostingId }, null)" class="btn btn-warning">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
            <td>
                <a href="@Url.Action("JobPosting", "JobPosting", new { id = item.JobPostingId }, null)" class="btn btn-warning">
                    <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                </a>
            </td>
            <td>
                <a href="@Url.Action("Submissions", "Application", new { id = item.JobPostingId }, null)" class="btn btn-warning">
                    <span class="glyphicon glyphicon-inbox" aria-hidden="true"></span>
                </a>
            </td>
            <td>
                <a href="@Url.Action("Delete", "JobPosting", new { id = item.JobPostingId }, null)" class="btn btn-warning">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }
</table>

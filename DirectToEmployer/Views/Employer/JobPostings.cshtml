@model List<DirectToEmployer.Models.JobPosting>

@{ 
    ViewBag.Title = "JobPostings";
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
}

<h2>My Active Job Postings</h2>

<p>
    <a href="@Url.Action("Create", "JobPosting")" class="btn btn-warning">
        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
    </a>
</p>

<table>
    <tr>
        <th class="col-md-4">
            Job Title
        </th>
        <th class="col-md-4">
            Suspense
        </th>
        <th class="col-md-1"></th>
        <th class="col-md-1"></th>
        <th class="col-md-1"></th>
        <th class="col-md-1"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="col-md-4">
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td class="col-md-4">
                @Html.DisplayFor(modelItem => item.Suspense)
            </td>
            <td class="col-md-1">
                <a href="@Url.Action("Edit", "JobPosting", new { id = item.JobPostingId }, null)" class="btn btn-warning">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                </a>
            </td>
            <td class="col-md-1">
                <a href="@Url.Action("JobPosting", "JobPosting", new { id = item.JobPostingId }, null)" class="btn btn-warning">
                    <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                </a>
            </td>
            <td class="col-md-1">
                <a href="@Url.Action("Submissions", "Application", new { id = item.JobPostingId }, null)" class="btn btn-warning">
                    <span class="glyphicon glyphicon-inbox" aria-hidden="true"></span>
                </a>
            </td>
            <td class="col-md-1">
                <a href="@Url.Action("Delete", "JobPosting", new { id = item.JobPostingId }, null)" class="btn btn-warning">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }
</table>
